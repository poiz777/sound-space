{% extends 'master.html.twig' %}
{% block title %}Songs Tracker{% endblock %}

{% block content %}
    <section id="pz-main-wrapper" class="pz-main-wrapper no-lr-pad containR">
	<span class="scroll-to-top" id="scroll-to-top">
		<span class="fa fa-chevron-up scroll-to-top-icon" id="scroll-to-top-icon"></span>
	</span>
        <section class="container">
            <section>
                <!-- ERROR BLOCK -->
            </section>
            <section style="padding-top:50px;">
                <div class="pz-time-tracker-wrapper col-md-12 no-lr-pad">
                    <div class="col-md-12" id="pz-form-wrapper">
                        {% if error %}
                            {{ dump(error) }}
                            <div class="alert alert-danger" >
                                { error.messageKey|trans(error.messageData, 'security') }
                            </div>
                        {% endif %}

                        {{ form_start(form) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.plainPassword.first, {'label':'Password:'} ) }}
                            {{ form_row(form.plainPassword.second, {'label':'Repeat Password:'} ) }}
                            {{ form_row(form.roles) }}
                            <button type="submit" class="btn btn-primary" formnovalidate>Register <span class="fa fa-user"></span></button>
                            <a href="{{ path('security_login') }}" class="btn btn-primary">Login <span class="fa fa-lock"></span></a>
                        {{ form_end(form) }}
                    </div>
                </div>
            </section>
        </section>
    </section>
{% endblock %}

{% block footer_scripts %}
    <script type="text/javascript" src="{{ asset('js/jquery-3.1.0.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery.easing.1.3.js') }}"></script>
{% endblock %}
