{% extends 'master.html.twig' %}
{% block title %}Songs Tracker{% endblock %}

{% block content %}
    <section id="pz-main-wrapper" class="pz-main-wrapper no-lr-pad containR">
	<span class="scroll-to-top" id="scroll-to-top">
		<span class="fa fa-chevron-up scroll-to-top-icon" id="scroll-to-top-icon"></span>
	</span>
        <section class="container">
            {% include 'partials/flash-message.render.html.twig' %}
            <section style="padding-top:50px;">
                <div class="pz-time-tracker-wrapper col-md-12 no-lr-pad">
                    <div class="col-md-12" id="pz-form-wrapper">

                        {% if error %}
                            <div class="alert alert-danger" >
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}



                        <div class="col-sm-5">
                            <div class="well">
                                <form action="{{ path('security_login') }}" method="post">
                                    <fieldset>
                                        <legend><i class="fa fa-lock" aria-hidden="true"></i> {{ 'Login'|trans }}</legend>
                                        <div class="form-group">
                                            <label for="username">{{ 'Username'|trans }}</label>
                                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
                                        </div>
                                        <div class="form-group">
                                            <label for="password">{{ 'Password'|trans }}</label>
                                            <input type="password" id="password" name="_password" class="form-control" />
                                        </div>
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'Login'|trans }}
                                        </button>
                                    </fieldset>
                                </form>
                            </div>
                        </div>


                        <div class="col-sm-7">
                            whatever man....
                        </div>
                    </div>
                </div>
            </section>
        </section>
    </section>
{% endblock %}

{% block footer_scripts %}
    <script type="text/javascript" src="{{ asset('js/jquery-3.1.0.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery.easing.1.3.js') }}"></script>
